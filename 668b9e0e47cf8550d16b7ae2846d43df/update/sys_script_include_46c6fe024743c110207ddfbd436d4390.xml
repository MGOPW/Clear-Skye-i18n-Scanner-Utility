        <caller_access/>
        <client_callable>false</client_callable>
        <description>Checks if a value was provided and throws an error if it wasn't</description>
        <name>assertMandatory</name>
        <script><![CDATA[var assertMandatory = function(varValue, varName, message) {
	if (!varValue) {
		if (message) {
			throw varName;
		}
		else {
			throw 'Variable named ' + varName + ' was not provided';
		}
	}
};]]></script>
